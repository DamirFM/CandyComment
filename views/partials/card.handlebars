{{!-- Partial for blogPost card --}}
<div class="row mb-4 project card text-dark shadow">
  <div class="card-header">
    <h3>
      <a href="/blogPost/{{id}}">{{title}}</a>
    </h3>
    <p>Created by
      {{user.name}}
      on
      {{format_date date_created}}</p>
  </div>
  <div class="card-body">
    <p>{{description}}</p>
  </div>
</div>